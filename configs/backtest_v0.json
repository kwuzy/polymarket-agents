{
  "seed": 42,
  "snapshot_path": "data/snapshots/gamma_markets_fixture.json",
  "filters": {
    "min_prob": 0.35,
    "max_prob": 0.65,
    "max_spread": 0.65
  },
  "risk": {
    "starting_bankroll": 1000.0,
    "risk_unit_pct": 0.0001,
    "capital_utilization": 0.2,
    "max_drawdown": 0.2,
    "daily_loss_cap": 0.1,
    "freeze_ru_within_ladder": true
  },
  "execution": {
    "mode": "all_trades",
    "max_concurrent_ladders": 4,
    "num_lines": 10,
    "line_assignment": "round_robin",
    "fee_bps": 0,
    "slippage_bps": 0
  },
  "weights": {
    "market": 0.45,
    "cross": 0.3,
    "news": 0.1,
    "reddit": 0.05,
    "trader": 0.1
  },
  "weight_sweep": {
    "enabled": true,
    "step": 0.05,
    "max_variants": 250
  },
  "validation": {
    "holdout_fraction": 0.25,
    "folds": 4,
    "cost_scenarios": [
      {"label": "ideal", "fee_bps": 0, "slippage_bps": 0},
      {"label": "light_cost", "fee_bps": 5, "slippage_bps": 5},
      {"label": "moderate_cost", "fee_bps": 10, "slippage_bps": 15},
      {"label": "stress_cost", "fee_bps": 20, "slippage_bps": 25}
    ]
  }
}
